                <h1 class="col text-white"> Gestionar restaurantes </h1>
        
                <!-- mostrar si logueado -->
                <div class="text-end">
                    <span class="nav-link px-2 text-white">{{ userName }}</span>
                    <a href="/logout" type="button" class="btn btn-outline-light me-2">Logout</a>
                </div>
                <div class="flex-shrink-0 dropdown">
                  <a href="#" class="d-block link-secondary text-decoration-none dropdown-toggle" id="dropdownUser2" data-bs-toggle="dropdown" aria-expanded="false">
                    <img src="//picsum.photos/32" alt="mdo" width="32" height="32" class="rounded-circle">
                  </a>
                  <ul class="dropdown-menu text-small shadow" aria-labelledby="dropdownUser2" style="">
                    <li><span class="dropdown-item fw-bold">Administración</span></li>
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="/restaurantes">Lista Restaurantes</a></li>
                    {{#if userRol}}
                    <li><a class="dropdown-item" href="/gestRestaurante">Gestionar Restaurantes</a></li>
                    {{/if}}
                    <li><hr class="dropdown-divider"></li>
                    <li><a class="dropdown-item" href="/logout">Salir</a></li>
                  </ul>
                </div>
              </div>
            </div>
          </header>
        <div class="container">
            <main class="shadow border mt-4 p-4">
                <div class="row" id="gestRestauranteError">{{message}}</div>
                <form class="row" id="gestRestaurante">
                    <div class="col-md-6 mb-2">
                        <label for="nombre" class="form-label">Nombre del restaurante:</label>
                        <input type="text" id="nombre" class="form-control" name="nombre" placeholder="Nombre del restaurante" required />
                    </div>
                    <div class="col-md-6 mb-2">
                        <label for="ciudad" class="form-label">Ciudad del restaurante:</label>
                        <input type="text" id="ciudad" class="form-control" name="ciudad" placeholder="Ciudad del restaurante" required />
                    </div>
                    <label for="coords" class="form-label">Cordenadas:</label>
                    <div class="col-md-6 mb-2">
                        <input type="text" id="coordsX" class="form-control" name="coordsX" placeholder="Latitud" required />
                    </div>
                    <div class="col-md-6 mb-2">
                        <input type="text" id="coordsY" class="form-control" name="coordsY" placeholder="Longitud" required />
                    </div>
                    <div class="mb-2">
                        <label for="descripcion" class="form-label">Descripcion:</label>
                        <textarea class="form-control form-control-sm" id="descripcion" name="descripcion" rows="4"></textarea>
                    </div>
                    <div class="mb-2">
                        <button type="submit" class="btn btn-primary">Guardar</button>
                        <a href="/restaurantes" class="btn btn-light">Volver</a>
                    </div>
                    {{#if restaurantes}}
                    <div id="restaurantesCreados" class="
                    row
                    row-cols-1
                    row-cols-sm-2
                    row-cols-md-4
                    ">
                    {{#each restaurantes}}
                        <div class="col mb-4">
                            <article class="card">
                                <div class="card-body">
                                    <h5 class="card-title">
                                        {{nombre}}<br>
                                        <small class="small">{{ciudad}}</small>
                                    </h5>
                                     Calificación Media: <span class="stars fs-6">{{resumenValoracion.calificacionMedia}}</span>
                                    <br>
                                    Fecha de alta: {{fechaAlta}}
                                    <br>
                                    <a href="/modRestaurante/{{id}}/" class="btn btn-primary">Modificar</a>
                                    <a href="/borrarRestaurante/{{id}}/" class="btn btn-secondary">Borrar</a>
                                </div>
                            </article>
                        </div>
                    {{/each}}
                    </div>
                    {{/if}}
                    <!--Fin lista restaurantes creados-->
                </form>
                <script>
                    document.getElementById('gestRestaurante').addEventListener('submit', async (event) => {
                        event.preventDefault();
                        const form = document.getElementById('gestRestaurante');
                        const formData = new FormData(form);
                        document.getElementById('gestRestauranteError').innerHTML = "";
                        fetch('/gestRestaurante', {
                            method: "POST",
                            headers: {"Content-Type": "application/json; charset=UTF-8"},
                            body: JSON.stringify(Object.fromEntries(formData.entries()))
                        })
                            .then((response) => {
                                if (response.status !== 200 ) {
                                    document.getElementById('gestRestauranteError')
                                        .innerHTML = `<div class="alert alert-danger" role="alert">ERROR al crear</div>`;
                                } else {
                                    return Promise.resolve(response.json());
                                }
                            }) 
                            .then((json) => {
                                document.getElementById('gestRestaurante')
                                    .innerHTML = `<div class="alert alert-success" role="alert">${json.message}</div>`
                            });
                    });
                </script>
            </main>
        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>       
    </body>
</html>