        <div class="container">
            <main class="shadow border mt-4 p-4">
                <h1>Modificar restaurantes:</h1>
                <form class="row">
                    <div class="col-md-6 mb-2">
                        <label for="nombre" class="form-label">Nombre del restaurante:</label>
                        <input type="text" id="nombre" class="form-control" name="nombre" placeholder="Nombre del restaurante" required > {{restaurante.nombre}} </input>
                    </div>
                    <div class="col-md-6 mb-2">
                        <label for="ciudad" class="form-label">Ciudad del restaurante:</label>
                        <input type="text" id="ciudad" class="form-control" name="ciudad" placeholder="Ciudad del restaurante" required > {{restaurante.ciudad}} </input>
                    </div>
                    <label for="coords" class="form-label">Cordenadas:</label>
                    <div class="col-md-6 mb-2">
                        <input type="text" id="coordsX" class="form-control" name="coordsX" placeholder="Latitud" required > {{restaurante.cordenadaX}} </input>
                    </div>
                    <div class="col-md-6 mb-2">
                        <input type="text" id="coordsY" class="form-control" name="coordsY" placeholder="Longitud" required > {{restaurante.coordenadaY}} </input>
                    </div>
                    <div class="mb-2">
                        <label for="descripcion" class="form-label">Descripcion:</label>
                        <textarea class="form-control form-control-sm" id="descripcion" name="descripcion" rows="4"> {{restaurante.descripcion}} </textarea>
                    </div>
                    <div class="mb-2">
                        <a href="/plato/{{restaurante.id}}/" class="btn btn-primary">Añadir plato</a>
                        <a href="/addsitios/{{restaurante.id}}/" class="btn btn-light">Añadir sitio turistico</a>
                    </div>
                    {{#if restaurante.platos}}
                    <h2>Platos</h2>
                    <div class="gridCards">
                        {{#each restaurante.platos}}
                        <article class="card card-plato plato-disponible">
                        <div class="card-body">
                            <h5 class="card-title">
                                {{nombre}} ({{precio}}€)<br />
                                <small>{{disponibilidad}}</small>
                            </h5>
                            <p class="card-text">
                                {{descripcion}}
                            </p>
                            <a href="/plato/{{restaurante.id}}/{{id}}" class="btn btn-primary">Actualizar</a>
                            <a href="/delPlato/{{restaurante.id}}/{{id}}" class="btn btn-secondary">Borrar</a> <!-- TODO: Creo que esto seria mejor por post para no recargar la vista...-->
                        </div>
                        </article>
                        {{/each}}
                    </div>
                    {{/if}}
                    {{#if restaurante.sitiosTuristicos}}
                    <h2>Sitios turísticos</h2>
                    <div class="gridCards">
                        {{#each restaurante.sitiosTuristicos}}
                        <article class="card">
                        {{#with imagenesUrls.[0]}}
                        <img src="{{url}}" class="card-img-top" alt="foto del sitio">
                        {{/with}}
                        <div class="card-body">
                            <h5 class="card-title">
                                {{nombre}}
                            </h5>
                            <p class="card-text">
                                 {{descripcion}}
                            </p>
                            <a href="/delsitioturistico/{{restaurante.id}}/{{id}}"  class="btn btn-primary">Borrar</a><!-- TODO: Creo que esto seria mejor por post para no recargar la vista...-->
                        </div>
                        </article>
                        {{/each}}
                    </div>
                    {{/if}}
                    <div class="mb-2">
                        <button type="submit" class="btn btn-primary">Guardar</button> <!--TODO: Pendiente-->
                        <a href="/borrarRestaurante/{{id}}/" class="btn btn-light">Borrar</a>
                        <a href="/gestRestaurante" class="btn btn-light">Volver</a>
                    </div>
                </form>
            </main>
        </div>
